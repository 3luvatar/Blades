<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dp">
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="Bid player 1"
			          android:id="@+id/bidPlayer1"
			          android:layout_weight="1"
			          android:gravity="left"
			          android:textSize="@dimen/text_size"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="Bid player 3"
			          android:id="@+id/bidPlayer3"
			          android:layout_weight="1"
			          android:gravity="right"
			          android:textSize="@dimen/text_size"/>
		</LinearLayout>
		<TextView android:layout_width="80dp"
		          android:layout_height="wrap_content"
		          android:text="Bags"
		          android:id="@+id/bags"
		          android:gravity="center"
		          android:textSize="@dimen/text_size"/>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="Bid player 2"
			          android:id="@+id/bidPlayer2"
			          android:layout_weight="1"
			          android:gravity="left"
			          android:textSize="@dimen/text_size"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="Bid player 4"
			          android:id="@+id/bidPlayer4"
			          android:layout_weight="1"
			          android:gravity="right"
			          android:textSize="@dimen/text_size"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:orientation="horizontal"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:id="@+id/linearLayout"
	              android:layout_margin="3dp">
		<LinearLayout android:orientation="horizontal"
		              android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:layout_weight="1">
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="Score player 1"
			          android:id="@+id/scorePlayer1"
			          android:layout_weight="1"
			          android:gravity="left"
			          android:textSize="@dimen/text_size"
			          android:textIsSelectable="false"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="net"
			          android:id="@+id/netTeam1"
			          android:gravity="center_horizontal"
			          android:textSize="@dimen/text_size"
			          android:layout_weight="1"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="Score player 3"
			          android:id="@+id/scorePlayer3"
			          android:layout_weight="1"
			          android:gravity="right"
			          android:textSize="@dimen/text_size"/>
		</LinearLayout>
		<TextView android:layout_width="80dp"
		          android:layout_height="wrap_content"
		          android:id="@+id/textView10"
		          android:gravity="center"/>
		<LinearLayout android:orientation="horizontal"
		              android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:layout_weight="1"
				>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="Score player 2"
			          android:id="@+id/scorePlayer2"
			          android:layout_weight="1"
			          android:gravity="left"
			          android:textSize="@dimen/text_size"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="net"
			          android:id="@+id/netTeam2"
			          android:gravity="center_horizontal"
			          android:textSize="@dimen/text_size"
			          android:layout_weight="1"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="Score player 4"
			          android:id="@+id/scorePlayer4"
			          android:layout_weight="1"
			          android:gravity="right"
			          android:textSize="@dimen/text_size"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:orientation="horizontal"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:id="@+id/linearLayout1"
	              android:layout_margin="3dp">
		<TextView android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:text="Score Team 1"
		          android:id="@+id/scoreTeam1"
		          android:layout_weight="1"
		          android:gravity="center_horizontal"
		          android:textSize="@dimen/text_size"/>
		<TextView android:layout_width="80dp"
		          android:layout_height="wrap_content"
		          android:id="@+id/textView15"
		          android:gravity="center"/>
		<TextView android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:text="Score Team 2"
		          android:id="@+id/scoreTeam2"
		          android:layout_weight="1"
		          android:gravity="center_horizontal"
		          android:textSize="@dimen/text_size"/>
	</LinearLayout>
</LinearLayout>